<Window x:Class="HelloWPFApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPFApp"
        mc:Ignorable="d"
        Title="Đăng nhập hệ thống" Height="429" Width="667" Background="#FFE1D2D2" WindowStartupLocation="CenterScreen" Cursor="Hand">
    <Grid Margin="0,0,1,29" RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="0.031"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Label Content="Đăng nhập hệ thống quản lý" HorizontalAlignment="Left" Margin="112,60,0,0" VerticalAlignment="Top" Foreground="#FF76FE44" FontSize="30" FontWeight="Bold" Background="#FF6C94E7"/>
        <Label Content="_Username :" 
               Target="{Binding ElementName=txtUserName}"
               HorizontalAlignment="Left" Margin="140,191,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Margin="247,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="120"/>
        <Label Content="Password:"
             
               HorizontalAlignment="Left" Margin="144,239,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPassWord" HorizontalAlignment="Left" Margin="247,239,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnDangNhap" Content="Đăng nhập" HorizontalAlignment="Left" Margin="247,303,0,0" VerticalAlignment="Top" Height="30" Width="71" Click="btnDangNhap_Click"/>
        <Button x:Name="btnThoat" Content="Thoát" HorizontalAlignment="Left" Margin="329,303,0,0" VerticalAlignment="Top" Height="30" Width="38" Click="btnThoat_Click"/>

    </Grid>
</Window>
